<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="games.lancelot.pokemonapi.MainActivity">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/etId"
        android:layout_marginTop="52dp"
        android:hint="ID"
        android:textSize="30dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/etContra"
        android:layout_below="@+id/etId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:hint="ContraseÃ±a"
        android:textSize="30dp"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon GO!"
        android:id="@+id/tvTitulo"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/etId"
        android:layout_alignStart="@+id/etId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="HackSpace Version"
        android:id="@+id/textView"
        android:layout_below="@+id/tvTitulo"
        android:layout_centerHorizontal="true"
        android:textSize="24dp" />
</RelativeLayout>